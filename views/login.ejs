<!DOCTYPE html>
<html>

<head>
  <title>ritesh</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="fontawesome-free/css/all.min.css">
  <link rel="stylesheet" href="bootstrap/bootstrap.css">
  <link rel="stylesheet" href="chartjs/Chart.min.css">
</head>

<body>
  <div class="container">
    <div class="card card-login mx-auto text-center bg-dark">
      <div class="card-header mx-auto bg-dark">
        <span> <img src="https://amar.vote/assets/img/amarVotebd.png" class="w-75" alt="Logo"> </span><br />
        <span class="logo_title mt-5"> Admin Login Dashboard </span>
        <!--            <h1>-->
        <!--</h1>-->

      </div>
      <div class="card-body">
        <form action="" method="POST">
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input type="text" name="email" id="admin_email" class="form-control" placeholder="Admin Username">
          </div>

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input type="password" name="password" id="admin_pass" class="form-control" placeholder="Admin Password">
          </div>

          <div class="form-group">
            <input type="button" name="btn" value="Login" id="butn"
              class="btn btn-outline-danger float-right login_btn">
          </div>

        </form>
      </div>
    </div>
  </div>
  <script src="jquery/jquery.min.js"></script>
  <script src="bootstrap/bootstrap.bundle.js"></script>
  <script>
    $(document).ready(function () {
      $("#butn").click(function () {
        var admin_id = $("#admin_email").val();
        var admin_password = $("#admin_pass").val();

        var admin_login = {
          "Email": admin_id,
          "Password": admin_password
        }
        $.ajax({
          url: "loginAuth",
          type: "POST",
          data: { admin_login: JSON.stringify(admin_login) },
          success: function (data) {
            if (data[0] == true) {
              window.location.href = "/dashboard";
            }
            else {
              alert(data[1]);
            }
          }, error: function (data) {
            console.log(data);
          }
        });
      });
    });
  </script>
</body>

</html>